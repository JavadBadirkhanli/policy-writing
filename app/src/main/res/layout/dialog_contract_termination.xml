<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/textView1ContractTerminationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarix"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTerminationDateContractTerminationDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/big_text_size"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1ContractTerminationDialog" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilTerminationReasonContractTerminationDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTerminationDateContractTerminationDialog">

        <EditText
            android:id="@+id/etTerminationReasonContractTerminationDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xitam səbəbi"
            android:minLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/customEntry" />

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>