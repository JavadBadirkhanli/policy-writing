<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/textView1ContractInfoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad"
        android:textSize="@dimen/customTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFullNameContractInfoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/customEntry"
        app:layout_constraintLeft_toLeftOf="@id/textView1ContractInfoDialog"
        app:layout_constraintTop_toBottomOf="@id/textView1ContractInfoDialog" />

    <TextView
        android:id="@+id/textView2ContractInfoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Dövlət qeydiyyat nişanı"
        android:textSize="@dimen/customTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFullNameContractInfoDialog" />

    <TextView
        android:id="@+id/tvCarNumberContractInfoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/customEntry"
        app:layout_constraintLeft_toLeftOf="@id/textView2ContractInfoDialog"
        app:layout_constraintTop_toBottomOf="@id/textView2ContractInfoDialog" />

</android.support.constraint.ConstraintLayout>