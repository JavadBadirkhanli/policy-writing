<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TerminateContractActivity"
    tools:showIn="@layout/activity_terminate_contract">

    <android.support.v7.widget.CardView
        android:id="@+id/cvTerminateDataTerminateContractActivityActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/btnTerminateTerminateContractActivityActivity"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/full_name"
                        android:textColor="#808080"
                        android:textSize="@dimen/customTitle" />

                    <TextView
                        android:id="@+id/tvFullNameTerminateContractActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#668089"
                        android:textSize="@dimen/customEntry"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#d5d5d5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_plate"
                        android:layout_marginTop="15dp"
                        android:textColor="#808080"
                        android:textSize="@dimen/customTitle" />

                    <TextView
                        android:id="@+id/tvCarNumberTerminateContractActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#668089"
                        android:textSize="@dimen/customEntry"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#d5d5d5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Xitam tarixi"
                        android:textColor="#808080"
                        android:textSize="@dimen/customTitle" />

                    <TextView
                        android:id="@+id/tvTerminationDateTerminateContractActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#668089"
                        android:textSize="@dimen/customEntry"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#d5d5d5" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilTerminationReasonTerminateContractActivity"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etTerminationReasonTerminateContractActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Xitam səbəbi"
                            android:textColor="#668089"
                            android:textSize="@dimen/customEntry"
                            android:textStyle="bold" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qaytarılan məbləğ"
                        android:layout_marginTop="15dp"
                        android:textColor="#808080"
                        android:textSize="@dimen/customTitle" />

                    <TextView
                        android:id="@+id/tvTerminationReturningAmountTerminateContractActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#668089"
                        android:textSize="@dimen/customEntry"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#d5d5d5" />

                    <LinearLayout
                        android:id="@+id/lnParticipantNameTerminateContractActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="İştirakçının adı"
                            android:textColor="#808080"
                            android:textSize="@dimen/customTitle" />

                        <TextView
                            android:id="@+id/tvParticipantNameTerminateContractActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="#668089"
                            android:textSize="@dimen/customEntry"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spParticipantNameTerminateContractActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:visibility="gone" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnTerminateTerminateContractActivityActivity"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_background"
                    android:text="@string/terminate"
                    android:textColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>